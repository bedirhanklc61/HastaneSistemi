@model HastaneSistemi.Models.DoktorUygunluk
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Randevu Uygunluk Ayarla</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" />
</head>
<body class="p-4">

    <h2 class="mb-4">📅 Randevu Uygunluk Aralığı Belirle</h2>

    <form asp-action="UygunlukAyarla" asp-controller="Doktor" method="post">
        <div class="form-group">
            <label>Başlangıç Tarihi</label>
            <input asp-for="BaslangicTarih" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Bitiş Tarihi</label>
            <input asp-for="BitisTarih" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Başlangıç Saati</label>
            <input asp-for="BaslangicSaat" type="time" class="form-control" />
        </div>

        <div class="form-group">
            <label>Bitiş Saati</label>
            <input asp-for="BitisSaat" type="time" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="DoktorPanel" class="btn btn-secondary ml-2">İptal</a>
    </form>

</body>
</html>
